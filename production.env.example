# Production Environment Configuration untuk Sistem Pengajuan HKI
# Copy file ini ke .env dan sesuaikan dengan konfigurasi server Anda

# Application Configuration
APP_NAME="Sistem Pengajuan HKI"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=db_hki
DB_USERNAME=hki_user
DB_PASSWORD=YOUR_STRONG_DATABASE_PASSWORD

# Mail Configuration (untuk notifikasi sistem)
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Cache Configuration (untuk performance)
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Redis Configuration (optional, untuk cache dan queue yang lebih baik)
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Log Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting (untuk real-time features - optional)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# File Storage Configuration
FILESYSTEM_DISK=local

# Security Settings
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Performance Settings
VIEW_CACHE_DRIVER=file
ROUTE_CACHE_DRIVER=file
CONFIG_CACHE_DRIVER=file

# Timezone (sesuaikan dengan lokasi server)
APP_TIMEZONE=Asia/Makassar

# Custom Settings untuk HKI System
# Maximum file upload size (in KB)
MAX_UPLOAD_SIZE=10240

# Allowed file types untuk upload dokumen
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# PDF Settings
PDF_DPI=150
PDF_FORMAT=A4

# Notification Settings
NOTIFICATION_ENABLED=true
ADMIN_EMAIL=admin@yourdomain.com

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Security Headers
SECURE_HEADERS=true
FORCE_HTTPS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Maintenance Mode
MAINTENANCE_SECRET=your-secret-key-for-bypass 